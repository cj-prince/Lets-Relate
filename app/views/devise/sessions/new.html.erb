<h1 align='center',style="font-family:Optima";>Welcome to Lets Relate - a complete Chat App</h1>
<h4 class="ui center aligned medium icon header">
    <i class="circular red power icon"></i>
    Log in to continue
</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="ui placeholder segment ">
    <div class="ui two column very relaxed stackable grid">
    <div class="column">
        <div class="ui form">
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, class:'ui left icon input',placeholder:'email' %>
              <i class="user icon"></i>
          </div>
          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password, class:'ui left icon input',placeholder: "password" %>
              <i class="lock icon"></i>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in",class:"ui orange submit  button" %>
          </div>
        
        </div>
    </div>
    <div class="middle aligned column">
        <div class="ui orange big button">
        <i class="signup icon"></i>
        <%= link_to 'Sign Up', new_user_registration_path %>
        </div>
    </div>
    </div>
    <div class="ui vertical divider">
    Or
    </div>
  </div>
 
<% end %>
<%= link_to 'Forgot your password?', edit_user_registration_path %>
