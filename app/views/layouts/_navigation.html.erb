<div class="ui container" >
    <div class="root">
        <%= link_to "Chatroom", root_path, class: "item" %>
    </div>
    
    
    <a class="item">
    Messages
    </a>
    <div class="right menu">
        <div class="ui dropdown item">
            Account <i class="dropdown icon"></i>
            <div class="menu">
                <% if signed_in? %>
                  <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "item" %>
                <% else %>
                    <%= link_to "Log In",new_user_session_path ,class: "item" %>
                    <%= link_to "Sign UP", new_user_registration_path, class: "item" %>
                <% end %>
                
            </div>
        </div>
        <div class="item">
            <%= link_to 'Sign Up',new_user_registration_path, class: 'ui primary button' %>
        </div>
    </div>
</div>
